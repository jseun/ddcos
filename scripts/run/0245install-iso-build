#!/bin/bash

source /scripts/functions
log_begin_msg

mkdir -p ${ISODIR}/install
cp -v ${LIVEROOTFS}.squashfs ${ISODIR}/install/live.squashfs
cp -v ${INSTALLROOTFS}.squashfs ${ISODIR}/live/filesystem.squashfs
xorriso -publisher "${PUBLISHER}"                               \
        -as mkisofs -l -J -R                                    \
        -V "${DISTVER}"                                         \
        -no-emul-boot -boot-load-size 4 -boot-info-table        \
        -b isolinux/isolinux.bin                                \
        -c isolinux/boot.cat                                    \
        -isohybrid-mbr ${ISODIR}/isolinux/isohdpfx.bin          \
        -o $INSTALLISOFILE $ISODIR

log_end_msg
