#!/bin/bash

abort()
{
	echo "aborted"; printf "\n\n%s: %s\n\n" "Reason" "$@"; exit 1
}

log_begin_msg()
{
	echo -n "${@}... "
}

log_end_msg()
{
	echo "${@}"; exit 0
}

run_scripts()
{
	rundir=${1}
	[ -d ${rundir} ] || return
	scripts=(${rundir}/*)
	for script in "${scripts[@]}"; do
		$script && ec=$? || ec=$?
		if [ "$ec" -ne 0 ]; then
			PS1="(build) " /bin/bash --norc
			echo "E: $script failed with return $ec."
			exit $ec
		fi
	done
}
