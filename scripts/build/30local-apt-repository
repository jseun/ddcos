#!/bin/bash

DESC="Updating local APT repository"

source ${SHDIR}/functions

log_begin_msg "${DESC}"

apt-get install -qqy dpkg-dev >/dev/null 2>&1

(cd ${APTDIR}; dpkg-scanpackages dists/local/main/binary-amd64 | \
  gzip -c9 > dists/local/main/binary-amd64/Packages.gz)

apt-get update

log_end_msg "done"
