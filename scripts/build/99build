#!/bin/bash

DESC="Building ISO"

source ${SHDIR}/functions

log_begin_msg "${DESC}"

cp -ax ${PKGDIR}/* ${ISODIR}/bundle
cp -ax /tmp/isolinux ${ISODIR}

vmlinuz=$(basename ${ISODIR}/live/vmlinuz-*)
initrd=$(basename ${ISODIR}/live/initrd.img-*)

sed -i	-e "s/@KERNEL@/${vmlinuz}/" \
	-e "s/@INITRD@/${initrd}/" \
	${ISODIR}/isolinux/isolinux.cfg

xorriso	-publisher "github.com/jseun"				\
	-as mkisofs -l -J -R					\
	-V "${DISTVER}"						\
	-no-emul-boot -boot-load-size 4 -boot-info-table	\
	-b isolinux/isolinux.bin				\
	-c isolinux/boot.cat					\
	-isohybrid-mbr ${ISODIR}/isolinux/isohdpfx.bin		\
	-o $ISOFILE $ISODIR

log_end_msg "done"
