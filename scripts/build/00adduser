#!/bin/bash

DESC="Creating default user and password"

[ -z "${DEFAULT_USER}" ] && DEFAULT_USER="docker"

is_cached()
{
  [ -d ${ROOTFS} ] && chroot ${ROOTFS} id ${DEFAULT_USER} >/dev/null 2>&1
}

source ${SHDIR}/functions

log_begin_msg "$DESC"
is_cached && log_end_msg "cached"

while [ -z "${PASSWORD}" ]; do
  PASSWORD=$(whiptail \
    --passwordbox "Please enter a password for user \"${DEFAULT_USER}\"" \
    $LINES $COLUMNS --title "Enter a password" 3>&1 1>&2 2>&3) || \
    abort "User cancelled password form"
  [ -z "${PASSWORD}" ] && continue
  CONFIRM=$(whiptail \
    --passwordbox "Please enter the password again" \
    $LINES $COLUMNS --title "Confirm password" 3>&1 1>&2 2>&3) || \
    panic "User cancelled the build process"
  if [ "${PASSWORD}" != "${CONFIRM}" ]; then
    unset PASSWORD
    whiptail --title "Password mismatch" \
      --msgbox "The password confirmation failed.  Please try again." \
      $LINES $COLUMNS
  fi
done

useradd --comment ${DEFAULT_USER} -s /bin/bash -g staff -mN ${DEFAULT_USER}
echo "${DEFAULT_USER}:${PASSWORD}" | chpasswd

log_end_msg "done"
